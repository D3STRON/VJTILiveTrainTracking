<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/time"
        android:text="8:30 AM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/DestinationBig"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/time"
        android:layout_marginLeft="40dp"
        android:text="Mumbai CST"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/slowfast"
        android:text="S"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/DestinationBig"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"/>
    <View
        android:id="@+id/grayview"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/slowfast"
        android:background="@color/lightgray"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>
    <TextView
        android:id="@+id/pf"
        android:text="PF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <TextView
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"
        android:layout_below="@+id/pf"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CST"
        android:layout_below="@+id/time"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:alpha="0.75"/>
    <TextView
        android:id="@+id/dash"
        android:text="-"
        android:layout_below="@+id/time"
        android:layout_toRightOf="@+id/source"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"/>
    <TextView
        android:id="@+id/destination"
        android:layout_below="@+id/time"
        android:layout_toRightOf="@+id/dash"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kalyan"
        android:alpha="0.75"
        android:layout_marginTop="5dp"/>
    <View
        android:id="@+id/grayview2"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/lightgray"
        android:layout_below="@id/source"/>
</RelativeLayout>