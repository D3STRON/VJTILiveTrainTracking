<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/stationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:text="Thane"
        android:textSize="24sp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"/>
    <View
        android:id="@+id/grayview2"
        android:layout_width="match_parent"
        android:layout_marginRight="100dp"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:background="@color/lightgray"
        android:layout_below="@id/stationName"/>
    <TextView
        android:id="@+id/distanceVal"
        android:text="12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:layout_below="@+id/grayview2"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/timeVal"
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:layout_toRightOf="@+id/distanceVal"
        android:layout_below="@+id/grayview2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/distanceLabel"
        android:text="Distance"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/distanceVal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/timeLabel"
        android:text="Time"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/distanceVal"
        android:layout_toRightOf="@+id/distanceLabel"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="70dp"/>
    <ImageView
        android:id="@+id/status"
        android:src="@drawable/green_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"/>
</RelativeLayout>